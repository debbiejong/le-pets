<div class="text-center">
  <h1><%= @pet.name.capitalize %></h1>
  <br>
  <h5>Found on: <%= @pet.found_on %></h5>
  <h5>Species: <%= @pet.category %></h5>
  <br>
  <%= link_to "Edit " + @pet.name, edit_pet_path(@pet) %>
  <br>
  <%= link_to "Delete " + @pet.name, pet_path(@pet), method: :delete, data: { confirm: "Are you sure you want to delete " + @pet.name + "?" } %>
  <br>
  <%= link_to "Back to all pets", pets_path %>
  <br>
</div>
